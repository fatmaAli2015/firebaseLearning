<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fatmaali.firebaselearning">

    <uses-sdk tools:overrideLibrary="com.google.android.gms.all" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FireApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GoogleSignInFirebaseAuthentication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".AddingMultipleObjectsToDatabase" />
        <activity android:name=".FirebaseRetrieveRealtimeData" />
        <activity android:name=".FirebaseRetrieveRealtimeDataListView" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".FirebaseUIFirebaseListAdapters" />
        <activity android:name=".ImageView" />
        <activity android:name=".CaptureImageFirebaseStorage" />
        <activity android:name=".RecordAudioFirebaseStorageUploadAudio"></activity>
    </application>

</manifest>